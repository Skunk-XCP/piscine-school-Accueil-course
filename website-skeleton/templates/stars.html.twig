<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Stars</title>
</head>
<body>

{% for star in stars %}
{% if star.published %}
<article style="background-color: {{ star.color }};">
    <h1>{{ star.title }}</h1>
    <img src="{{ star.image }}">
    <p>{{ star.publishedDate|date("m/d/Y") }}</p>
    {% endif %}
    {% endfor %}
</article>

</body>
</html>